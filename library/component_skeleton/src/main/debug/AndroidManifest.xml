<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hubertyoung.component_skeleton">

    <application
        android:name="com.hubertyoung.common.CommonApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/skeleton_app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="activity.RecyclerViewActivity" />
        <activity
            android:name="activity.ViewActivity"
            android:hardwareAccelerated="false" />
        <activity android:name="activity.StatusViewActivity"/>
    </application>

</manifest>