<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_details_button_bar_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:showIn="@layout/activity_web_view_details">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_card_share_details_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/item_bg_selector"
            android:gravity="center"
            android:paddingBottom="5.0dp"
            android:paddingTop="7.0dp"
            android:text="收藏"
            android:visibility="visible"
            android:textColor="@color/text_color_gray64"
            android:textSize="@dimen/text_size11_0dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_card_consume_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/item_bg_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="消费记录"
            android:visibility="gone"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size13_0dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_card_share_details_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/btn_onclick_selector_no_corners"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size15_0dp"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>