<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:aapt="http://schemas.android.com/aapt"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_item_root"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/home_region_hor_margin"
                android:layout_marginRight="@dimen/home_region_hor_margin">

    <ImageView
        android:id="@+id/item_game_center_news_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_game_center_rolling_news"/>

    <View
        android:id="@+id/item_game_center_news_divider"
        android:layout_width="0.5dp"
        android:layout_height="12.5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/item_game_center_news_icon"
        android:background="@color/divider_light_gray_color"/>

    <com.hubertyoung.common.widget.textswitcher.AdvTextSwitcher
        android:id="@+id/item_game_center_news_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.5dp"
        android:layout_toRightOf="@+id/item_game_center_news_divider"
        android:textColor="@color/text_black_color"
        app:gravity="left"
        app:textSize="13sp"/>
</RelativeLayout>
