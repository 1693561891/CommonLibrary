<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_index_hot_goods_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="5.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_marginTop="5.0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/banner_default"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_index_hot_goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size17_0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_index_hot_goods_price"
        app:layout_constraintLeft_toRightOf="@id/iv_index_hot_goods_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_index_hot_goods_icon"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="笔记本笔记本"
        tools:visibility="visible"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_index_hot_goods_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/color_bg9f1522"
        android:textSize="@dimen/text_size16_0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_index_hot_goods_icon"
        app:layout_constraintLeft_toLeftOf="@id/tv_index_hot_goods_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_index_hot_goods_name"
        app:layout_goneMarginLeft="10dp"
        tools:text="￥12.9"/>
</android.support.constraint.ConstraintLayout>