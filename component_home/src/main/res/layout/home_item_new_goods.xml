<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/home_item_head_body"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/DIMEN_10_0DP"
        android:paddingLeft="@dimen/DIMEN_20_0DP"
        android:paddingRight="@dimen/DIMEN_20_0DP"
        android:paddingTop="@dimen/DIMEN_5_0DP"
        tools:layoutManager="android.support.v7.widget.GridLayoutManager"
        tools:listitem="@layout/home_item_new_goods_body"
        tools:spanCount="2"/>
</android.support.v7.widget.LinearLayoutCompat>
